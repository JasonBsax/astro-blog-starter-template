---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="jazz-hero">
				<p class="jazz-hero-label"></p>
				<h1>Digital Entrepreneurship</h1>
				<p class="jazz-hero-tagline"></p>
			</section>
			<p>
				Hi, my name is Jason Barbour. I'm a Jazz Studies major in my sophomore year of college.
				My Instagram is <a href="https://instagram.com/JasonBsax" target="_blank" rel="noopener noreferrer">JasonBsax</a> but you won't find anything there.
			</p>
		</main>
		<Footer />
	</body>
</html>

<style>
	.jazz-hero {
		text-align: center;
		padding: 2.5em 0 3em;
		margin-bottom: 2em;
		border-bottom: 1px solid rgba(212, 175, 55, 0.25);
	}
	.jazz-hero-label {
		font-size: 0.85em;
		letter-spacing: 0.25em;
		text-transform: uppercase;
		color: var(--jazz-gold);
		margin: 0 0 0.5em;
		opacity: 0.9;
	}
	.jazz-hero h1 {
		margin: 0;
		font-size: 2.75em;
		letter-spacing: 0.03em;
	}
	.jazz-hero-tagline {
		margin: 0.75em 0 0;
		font-style: italic;
		color: var(--jazz-cream-dim);
		font-size: 1.1em;
	}
</style>
